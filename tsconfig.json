{
  "extends": "@tsconfig/node17/tsconfig.json",
  "compilerOptions": {
  	"outDir": "dist"
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      // compilerOptions specified here will override those declared above,
